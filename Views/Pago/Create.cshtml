@using System.Globalization
@model zapat.Models.Pago
@{
    ViewData["Title"] = "Pago";
}





<form asp-controller="Pago" asp-action="Pagar">

<div class="carrito-container">
    <div class="carrito-left">
      <div class="payment-container">
        <div class="form-section">
            <div class="form-group">
                <label asp-for="NumeroTarjeta" class="form-label">Número de tarjeta</label>
                <input asp-for="NumeroTarjeta" class="form-control tarjeta-input" placeholder="" />
                <span asp-validation-for="NumeroTarjeta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="UserName"/>
                <label asp-for="NombreTargeta" class="form-label">Nombre y apellido</label>
                <input asp-for="NombreTargeta" class="form-control" placeholder="Como figura en la tarjeta." />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="DueDateYYMM" class="form-label">Fecha de vencimiento</label>
                    <input asp-for="DueDateYYMM" class="form-control" placeholder="MM/AA" />
                    <span asp-validation-for="DueDateYYMM" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cvv" class="form-label">Código de seguridad</label>
                    <input asp-for="Cvv" class="form-control" placeholder="CVV" />
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-preview">
            <img class="card-image" src="~/img/targeta.png" asp-append-version="true" alt="tarjeta" />
        </div>
      </div>
    </div>

    <div class="carrito-right">
        <h3>Resumen de compra</h3>
        <div class="resumen">
            <p><strong>Productos:</strong>
                <span>@ViewBag.Currency @Model.MontoTotal</span>
                <input type="hidden" asp-for="MontoTotal" />
            </p>
            <p>Envío: <span style="color: #00a650;">Gratis</span></p>
            <a href="#">Ingresar código de cupón</a>
            <hr />
            <p class="total">Total: <span>@ViewBag.Currency @Model.MontoTotal</span>
            <input type="hidden" asp-for="MontoTotal" />
            </p>
        </div>
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Pagar</button>
            </div>
        </div>
    </div>
</div>
</form>
<h1>@ViewData["Message"]</h1>
<br>
  <link rel="stylesheet" href="~/css/Pago.css" asp-append-version="true">
    
<link rel="stylesheet" href="~/css/templatemo.css" asp-append-version="true" />