@model IEnumerable<zapat.Models.Producto>
@{
    ViewData["Title"] = "Catalogo";
}

<div class="container py-5 catalogo-container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 sidebar">
            <h2 class="pb-4">Categorías</h2>
            <ul class="list-unstyled templatemo-accordion">
                <li class="pb-3">
                    <a class="d-flex justify-content-between h5 text-decoration-none" href="#">
                        Género
                        <i class="fa fa-fw fa-chevron-down"></i>
                    </a>
                    <ul class="collapse show list-unstyled pl-3">
                        <li><a class="text-decoration-none" href="#">Hombre</a></li>
                        <li><a class="text-decoration-none" href="#">Mujer</a></li>
                    </ul>
                </li>
                <li class="pb-3">
                    <a class="d-flex justify-content-between h5 text-decoration-none" href="#">
                        Tipo
                        <i class="fa fa-fw fa-chevron-down"></i>
                    </a>
                    <ul class="collapse list-unstyled pl-3">
                        <li><a class="text-decoration-none" href="#">Deportivas</a></li>
                        <li><a class="text-decoration-none" href="#">Lujo</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="col-lg-10">
            <div class="row align-items-center mb-4">
                <div class="col-md-6">
                    <ul class="list-inline shop-top-menu mb-0">
                        <li class="list-inline-item"><a class="h4 text-dark text-decoration-none mr-3" href="#">Todos</a></li>
                        <li class="list-inline-item"><a class="h4 text-dark text-decoration-none mr-3" href="#">Hombre</a></li>
                        <li class="list-inline-item"><a class="h4 text-dark text-decoration-none" href="#">Mujer</a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <select class="form-control w-50 ml-auto">
                        <option>Destacados</option>
                        <option>A - Z</option>
                        <option>Precio</option>
                    </select>
                </div>
            </div>

            <h1 class="h4">@ViewData["Message"]</h1>

            <div class="row">
                @foreach (var item in Model) {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card w-100 shadow-sm">
                            <div class="card-img-actions">
                                <img src="@item.ImageURL" class="img-fluid" alt="@item.Name" />
                            </div>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text">$@Html.DisplayFor(modelItem => item.Price)</p>
                                <div class="mt-3">
                                    <a class="btn btn-primary btn-sm mr-2" asp-controller="Carrito" asp-action="Add" asp-route-id="@item.Id">Agregar</a>
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/templatemo.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />